<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itheima.mapper.ClazzMapper">
    <!-- 在这里添加SQL映射 -->

    <select id="queryClazz" resultType="com.itheima.pojo.Clazz">
        select c.*, e.name masterName
        from clazz c left join emp e on c.master_id = e.id
        <where>
            <if test="begin != null and end != null">
                c.begin_date &gt; #{begin} and c.end_date &lt; #{end}
            </if>
        </where>

    </select>
</mapper>